<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <style>
            html,body{
                margin: 0;
                padding: 0;
            }
            .header {
                padding: 5px;
                background: linear-gradient(0deg, #65a719, #ceff97);
            }
            .header .menu ul{
                list-style: none;
                text-align: center;
            }
            .header .menu ul li {
                display: inline-block;
                margin-right: 20px;
            }
            .main {
                width: 1000px;
                margin: 0 auto;
                padding: 18px;
                background: #f7f7f7;
            }
            h1{
                border-bottom: 2px solid #b9b9b9;
            }
            .block-note {
                padding: 14px;
                background: white;
                border-radius: 10px;
                margin-bottom: 15px;
            }
            textarea{
                width: 100%;
                height: 100px;
            }
            #app_bundle_note_type{
                width:100%;
            }
            form {
                width: 300px;
                margin: 0 auto;
            }
        </style>
    </head>
    <body>
        <div class="header">
            <div class="menu">
                <ul>
                    <li><a href="{{ path('homePage') }}">Главная</a></li>
                    <li><a href="{{ path('noteList') }}">Заметки</a></li>
                    {% if(app.user) %}
                    <li><a href="{{ path('logout') }}">Выход</a></li>
                    {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">Вход</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">Регистрация</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
        <div class="main">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
